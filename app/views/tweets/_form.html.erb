<%= form_with(model: tweet, url: user_tweets_path(user_id: current_user.id), local: true, class: 'mt-3') do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation" class="my-4">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_area :body, id: :tweet_body, class: 'form-control', rows: 6 %>
  </div>

  <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-outline-secondary mr-1">Cancel</button>
